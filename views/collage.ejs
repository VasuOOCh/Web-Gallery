    <div class="imgView" style="display: none;">
        <button id="cross" style="font-size: 20px; padding: 7px; border-radius: 50%;height: 30px;aspect-ratio: 1; display: flex;justify-content: center;align-items: center;">X</button>
        <img src="" alt="#" class="fullImg" >
    </div>

    <script src="https://kit.fontawesome.com/b51a57a65a.js" crossorigin="anonymous"></script>
    <script>
        let imgs = document.querySelectorAll(".img");
        let fullImg = document.querySelector(".fullImg");
        let btn = document.getElementById("cross");
        let imgView = document.querySelector(".imgView")


        for(let img of imgs) {
            img.addEventListener("click", ()=>{
                let src = img.children[0].src;
                // console.log(src);
                imgView.style.display = "block";
                fullImg.src = src;
                
            })
        }

        btn.addEventListener("click", ()=>{
            fullImg.src = "";   
            imgView.style.display = "none";
        })
    </script>
